<body class="bg_f8f8f8">
    <div class="img_xq_wrap">
        <p class="t_c img_xq_title">商品詳情</p>
        <div class="img_xq pd20">
            @Html.Raw(ViewBag.Des)
        </div>
    </div>
</body>
</html>

<script type="text/javascript">
    $(function () {
        var maxWidth = 600;

        var zoomTimes;
        $("img").each(function () {
            var curWidth = $(this).width();
            var curHeight = $(this).height();
           
            if (curWidth > maxWidth) {

                $(this).width(maxWidth);
                zoomTimes = curWidth / maxWidth;
                $(this).height(curHeight / zoomTimes);
            }
        })
    });
</script>