@using SFO2O.M.Controllers
@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ShowFooter = false;
}
@section styles {
    <link href="@BundleConfig.BuildCss("Content/css/login.css")" rel="stylesheet">

}
@section scripts {
    @Scripts.Render(BundleConfig.BuildSrc(BundleConfig.BundleJsLogin))
}
<div class="linkWrap pa">
<a class="loginReturnBtn" id="loginReturnBtn"></a>
<a class="gotoHome fr" href="/" target="_parent"></a>
</div>
<div class="logo">
    <a href="/" target="_self"><img src="../Content/Images/login/logo.png" alt="logo" /></a>
</div>
<div class="loginBox" id="login">
    <p>
        <span class="select" id="select">
            <span>+86&nbsp;&nbsp;</span>
            @*<img src="@Url.Content("~/Content/Images/login/down.png")">*@
        </span>
        <input type="tel" id="tel" placeholder="请您输入手机号" maxlength="11" />
    </p>
    <p>
        <input type="password" maxlength="32"  id="psw" placeholder="请输入密码" />
    </p>
</div>
<div class="btnBox">
    <a class="btn" id="loginBtn">登&nbsp;录</a>
    <p class="tc links">
        @Html.ActionLink("我要注册", "Register") <span>|</span>
        @Html.ActionLink("忘记密码", "Register", new { t = 1 })
    </p>  
</div>


