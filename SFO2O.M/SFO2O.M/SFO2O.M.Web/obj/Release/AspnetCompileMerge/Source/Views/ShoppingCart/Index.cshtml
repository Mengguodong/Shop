    ViewBag.ShowFastShoppingCart = false;
    this.ViewBag.Title = "购物车";
    LoginUserModel user = ViewBag.LoginUser ?? null;
    ViewBag.ShowFooter = false;
    bool isChechedAll = false;
    if (Model != null && Model.Items != null && Model.Items.Any())
