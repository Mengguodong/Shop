<script type="text/javascript">
    $(function () {
        //href="/Order/GiftSubmit?giftType=1"
        $("[name=a_gift]").click(function () {
            var giftType = $(this).attr("giftType");

            $.post("/Order/GiftSubmit", { giftType: giftType }, function (data) {

